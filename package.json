{
    "name": "liob",
    "version": "0.2.2",
    "description": "响应式的数据管理库",
    "main": "lib/index.js",
    "module": "es/index.js",
    "scripts": {
        "test": "jest --verbose --coverage",
        "test:watch": "BABEL_ENV=test NODE_ENV=test jest --watch --verbose",
        "build:commonjs": "BABEL_ENV=commonjs babel src --out-dir lib",
        "build:es": "BABEL_ENV=es babel src --out-dir es",
        "build:umd": "BABEL_ENV=rollup NODE_ENV=development rollup -c -o dist/liob.js",
        "build:umd:min": "BABEL_ENV=rollup NODE_ENV=production rollup -c -o dist/liob.min.js",
        "build": "npm run clear && npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
        "clear": "rm -rf dist & rm -rf es & rm -rf lib",
        "prepublish": "npm run build"
    },
    "author": "lijianzhang",
    "license": "ISC",
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-eslint": "^8.0.2",
        "babel-plugin-external-helpers": "^6.22.0",
        "babel-plugin-istanbul": "^4.1.5",
        "babel-plugin-transform-decorators-legacy": "^1.3.4",
        "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-flow": "^6.23.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "eslint": "^4.11.0",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-plugin-flowtype": "^2.46.1",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-jest": "^21.3.2",
        "eslint-plugin-jsx-a11y": "^6.0.2",
        "eslint-plugin-react": "^7.4.0",
        "flow-bin": "^0.69.0",
        "jest": "^21.2.1",
        "npm": "^5.8.0",
        "rollup": "^0.56.5",
        "rollup-plugin-babel": "^3.0.3",
        "rollup-plugin-commonjs": "^9.0.0",
        "rollup-plugin-node-resolve": "^3.2.0",
        "rollup-plugin-replace": "^2.0.0",
        "rollup-plugin-uglify": "^3.0.0"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.js"
        ],
        "setupFiles": [
            "<rootDir>/test/shim.js",
            "<rootDir>/test/setup.js"
        ]
    },
    "dependencies": {
        "lodash.clone": "^4.5.0",
        "react": "^16.2.0",
        "react-dom": "^16.2.0"
    }
}
